@page
@model LoginModel


@{
    ViewData["PageId"] = "login";
}
<body data-page="login">
    <div class="container text-center" style="margin-top: 7rem !important;">
        <div class="row d-flex justify-content-center">
            <div class="col-md-6">
                <section>
                    <form id="account" method="post" class="form" style="position:relative;">
                        <p class="title text-center" style="justify-content: center; padding-left:0px !important;">Login</p>
                        <p class="message">Please log in to access your account.</p>
                        <hr />

                        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

                        <!-- Email -->
                        <label>
                            <span style="padding: 4px; display:flex; justify-self:start;">Email</span>
                            <input asp-for="Input.Email" class="input" type="email" autocomplete="username" aria-required="true" placeholder="name@example.com" required />
                        </label>
                        <span asp-validation-for="Input.Email" class="text-danger"></span>

                        <!-- Password -->
                        <label>
                            <span style="padding: 4px; display:flex; justify-self:start;">Password</span>
                            <input asp-for="Input.Password" class="input" type="password" autocomplete="current-password" aria-required="true" placeholder="password" required />
                        </label>
                        <span asp-validation-for="Input.Password" class="text-danger"></span>

                        <!-- Remember me -->
                        <div class="checkbox mb-3">
                            <label asp-for="Input.RememberMe" class="form-label">
                                <input class="form-check-input" asp-for="Input.RememberMe" />
                                @Html.DisplayNameFor(m => m.Input.RememberMe)
                            </label>
                        </div>

                        <!-- Login button -->
                        <button id="login-submit" type="submit" class="submit">Log in</button>

                        <!-- Additional links -->
                        <div class="text-start">
                            <p class="mt-3">
                                <a id="forgot-password" asp-page="./ForgotPassword">Forgot password?</a>
                            </p>
                            <p>
                                <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Create a new account</a>
                            </p>
                            <p>
                                <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Resend email confirmation</a>
                            </p>
                        </div>
                    </form>
                </section>
            </div>
        </div>
    </div>
</body>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
